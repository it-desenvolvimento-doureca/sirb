#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node --max-old-space-size=10240"  "$basedir/../tslint/bin/tslint" "$@"
  ret=$?
else 
  node --max-old-space-size=10240  "$basedir/../tslint/bin/tslint" "$@"
  ret=$?
fi
exit $ret

